<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">


            <TextView
                android:id="@+id/txtuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme"
                android:textColor="#FFFF"
                android:textSize="17dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/drawingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtuser"
                android:layout_marginTop="6dp"
                android:text="Dog"
                android:textColor="#FFFF"
                android:textSize="@dimen/text_size_title_muliti"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width= "match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_horizontal_card_muliti"
                android:layout_marginTop="@dimen/margin_vertical_card_muliti"
                android:layout_marginRight  = "@dimen/margin_vertical_card_muliti"
                android:layout_marginBottom="@dimen/margin_horizontal_card_muliti"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/corner_radius_card_muliti"
                app:cardElevation="@dimen/elevation_card_muliti">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/paint1"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/margin_horizontal_image_muliti"
                        android:layout_marginRight="@dimen/margin_horizontal_image_muliti"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_vertical_image_muliti"
                        android:src="@drawable/expaint" />

                    <TextView
                        android:id="@+id/text_name_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="@dimen/margin_bottom_text_player_muliti"
                        android:text="User#1"
                        android:textColor="#6f6f6f"
                        android:textSize="@dimen/text_size_text_player_muliti" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width= "match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_horizontal_card_muliti"
                android:layout_marginTop="@dimen/margin_vertical_card_muliti"
                android:layout_marginRight  = "@dimen/margin_vertical_card_muliti"
                android:layout_marginBottom="@dimen/margin_horizontal_card_muliti"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/corner_radius_card_muliti"
                app:cardElevation="@dimen/elevation_card_muliti">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/friendmap1"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/margin_horizontal_image_muliti"
                        android:layout_marginRight="@dimen/margin_horizontal_image_muliti"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_vertical_image_muliti"
                        android:src="@drawable/expaint" />

                    <TextView
                        android:id="@+id/text_name_player_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="@dimen/margin_bottom_text_player_muliti"
                        android:text="User#2"
                        android:textColor="#6f6f6f"
                        android:textSize="@dimen/text_size_text_player_muliti" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width= "match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_horizontal_card_muliti"
                android:layout_marginTop="@dimen/margin_vertical_card_muliti"
                android:layout_marginRight  = "@dimen/margin_vertical_card_muliti"
                android:layout_marginBottom="@dimen/margin_horizontal_card_muliti"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/corner_radius_card_muliti"
                app:cardElevation="@dimen/elevation_card_muliti">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/friendmap2"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/margin_horizontal_image_muliti"
                        android:layout_marginRight="@dimen/margin_horizontal_image_muliti"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_vertical_image_muliti"
                        android:src="@drawable/expaint" />

                    <TextView
                        android:id="@+id/text_name_player_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="@dimen/margin_bottom_text_player_muliti"
                        android:text="User#3"
                        android:textColor="#6f6f6f"
                        android:textSize="@dimen/text_size_text_player_muliti" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width= "match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_horizontal_card_muliti"
                android:layout_marginTop="@dimen/margin_vertical_card_muliti"
                android:layout_marginRight  = "@dimen/margin_vertical_card_muliti"
                android:layout_marginBottom="@dimen/margin_horizontal_card_muliti"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/corner_radius_card_muliti"
                app:cardElevation="@dimen/elevation_card_muliti">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/friendmap3"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/margin_horizontal_image_muliti"
                        android:layout_marginRight="@dimen/margin_horizontal_image_muliti"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_vertical_image_muliti"
                        android:src="@drawable/expaint" />

                    <TextView
                        android:id="@+id/text_name_player_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="@dimen/margin_bottom_text_player_muliti"
                        android:text="User#4"
                        android:textColor="#6f6f6f"
                        android:textSize="@dimen/text_size_text_player_muliti" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width= "match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_horizontal_card_muliti"
                android:layout_marginTop="@dimen/margin_vertical_card_muliti"
                android:layout_marginRight  = "@dimen/margin_vertical_card_muliti"
                android:layout_marginBottom="@dimen/margin_horizontal_card_muliti"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/corner_radius_card_muliti"
                app:cardElevation="@dimen/elevation_card_muliti">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/friendmap4"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/margin_horizontal_image_muliti"
                        android:layout_marginRight="@dimen/margin_horizontal_image_muliti"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_vertical_image_muliti"
                        android:src="@drawable/expaint" />

                    <TextView
                        android:id="@+id/text_name_player_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="@dimen/margin_bottom_text_player_muliti"
                        android:text="User#5"
                        android:textColor="#6f6f6f"
                        android:textSize="@dimen/text_size_text_player_muliti" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>



    </LinearLayout>


</ScrollView>